#include <stdio.h>
void rec_print(int n)
{ 
int i,j,k=0,h;

for(i=0;i<n;i++)
 { 
   for(j=0;j<=i;j++)
   {
    printf("%d ",n-j);
   }
   for(k=1 ;k<(n-i);k++)
     {printf("%d ",n-i);
     printf("%d ",n-i);
     }
  
   for(j=i-1;j>=0;j--)
   {
    printf("%d ",n-j);
   }
   
   printf("\n");
 } 
 /****************/
 for(i=n-1;i>0;i--)
 { 
   for(j=0;j<i;j++)
   {
     printf("%d ",n-j);
   }
   for(k=1 ;k<n-(i-1);k++)
    { printf("%d ",n-(i-1));
      printf("%d ",n-(i-1));
    }
   for(j=i-2;j>=0;j--)
   {
     printf("%d ",n-j);
   }
  
   printf("\n");
 } 
}

int main(void) {
  int num;
  scanf("%d",&num);
  rec_print(num);
  return 0;
}
